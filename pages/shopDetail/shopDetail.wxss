/* pages/shopDetail/shopDetail.wxss */
/* 商铺头部 */
.header{
  display: flex;
  background-color: #484d54;
  padding: 20rpx 30rpx;
}
.header .shop-logo{
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.header .shop-info{
  overflow:hidden;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  color: #fff;
  margin-left: 20rpx;
}
.shop-info-top{
  flex: 1;
  display: flex;
  align-items: center;
}
.shop-info-top .top-item{
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.shop-info-top .top-item:first-child{
  padding-left: 0;
}
.shop-info-center{
  flex: 1;
  display: flex;
  align-items: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden; 
}
.shop-info-bottom{
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop-info-bottom .discount-icon{
  width: 30rpx;
  height: 30rpx;
  margin-right: 40rpx;
}
.discount-content{
  flex: 1;
}
/* 商铺内容 */
.shop-part {
  display: flex;
  font-size: 28rpx;
}
.shop-type-part {
  width: 200rpx;
  box-sizing: border-box;
  background-color: #ebedf0;
}
.shop-type-item {
  padding: 24rpx;
  text-align: center;
  position: relative;
}
.shop-type-item .type-num{
  position: absolute;
  top: 0;
  right: 10rpx;
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  background-color: #fe2947;
  border-radius: 12rpx;
  color: #fff;
  font-size: 20rpx;
}
.shop-type-item.choosed{
  background: rgb(250, 248, 248);
}
.shop-products-part {
  flex: 1;
}
/* 购物车 */
.shop-car-part {
  height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 8;
}
.shop-car-part .totalPrice {
  flex: 1;
  display: flex;
  align-items: center;
  background: #484d54;
  color: #c7c7c7;
}
.shop-car-part .totalPrice .hasprice{
  display: flex;
  flex-direction: column;
  align-items:flex-start;
  color: #c7c7c7;
}
.shop-car-part .totalPrice .hasprice view{
  flex: 1;
  font-size: 24rpx;
}
.shop-car-part .totalPrice .hasprice .price{
  color: #fe2947;
  font-weight: bold;
  font-size: 40rpx;
}
.shop-car-part .buy {
  width: 200rpx;
  background: gold;
  line-height: 100rpx;
  color: #000;
}
.shop-car-part .nobuy {
  width: 200rpx;
  background: #1a1c1f;
  line-height: 100rpx;
}
/* mask遮罩 */
.mask{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.5;
  z-index: 1;
}
.fixed-info{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
  background-color: #fff;
  z-index: 10;
  padding: 30rpx 24rpx;
}
.fixed-info-item{
  margin-bottom: 30rpx;
}
.fixed-info-item .fixed-item-title{
  font-weight: bold;
}
.fixed-item-text{
  font-size: 24rpx;
  padding: 8rpx 0;
}
.fixed-info-top {
  font-size: 24rpx;
}
.fixed-info-top-item{
  display: flex;
  align-items: center;
  padding: 8rpx 0;
}
.fixed-info-top image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.fixed-info-send{
  display: flex;
  align-items: center;
}
.fixed-info-send .top-item{
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.fixed-info-send .top-item:first-child{
  padding-left: 0;
}
