::-webkit-scrollbar {
	width: 0;
	height: 0;
	color:transparent;
}
.header {
	display: flex;
	padding: 30rpx 25rpx;
	font-size: 30rpx;
}
.header .choose-city {
	width: 150rpx;
	padding-left: 50rpx;
	height:60rpx;
	line-height: 60rpx;
}
.header .search {
	padding-left: 20rpx;
	width: 550rpx;
	height: 60rpx;
	display: flex;
	background-color: #efefef;
    border-radius: 30rpx;
}
.header image {
	width: 50rpx;
	height: 50rpx;
}
.mid {
	padding: 0 50rpx;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 35rpx;
	display: flex;
	justify-content: space-between;
	border-top: 1px solid #efefef;
	border-bottom: 1px solid #efefef;
}
.mid .location {
	color: #edae44;
}
.fjdz {
	padding-left: 60rpx;
	color: #989898;
	font-size: 25rpx;
	line-height: 100rpx;
}
.item-part {
	margin-left: 60rpx;
	font-size: 30rpx;
	line-height: 100rpx;
	border-bottom: 1px solid #efefef;

}
.current {
	margin-left: 60rpx;
	font-size: 40rpx;
	color: #edae44;
	line-height:100rpx;
}
.current text {
	color: black;
	font-size: 30rpx;
	margin-right: 20rpx;
}

.search-letter {
    position: fixed;
    top: 100rpx;
    right: 0;
    width: 40rpx;
    font-size: 28rpx;
    background: #fff;
    z-index: 100;
    text-align: center;
    color: #696969;
}
/*.search-letter .letter {
	width: 40rpx;
	height: 20rpx;
	line-height: 20rpx;
}*/
.title {
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 20rpx;
    font-size: 24rpx;
    color: #696969;
}
.content {
    padding: 10rpx 0 20rpx;
}

.content text {
    display: inline-block;
    width: 27%;
    border: 1px solid #ccc;
    border-radius: 8rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    margin: 0 0 20rpx 20rpx;
}
.item-title {
    height: 60rpx;
    line-height: 60rpx;
    background: #f1f1f1;
    font-size: 30rpx;
    padding-left: 20rpx;
}
.item-city {
	font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding-left: 20rpx;
    border-bottom: 1px solid #efefef;
}