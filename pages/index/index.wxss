
::-webkit-scrollbar {
	width: 0;
	height: 0;
	color:transparent;
}
.header {
	font-size: 30rpx;
	display: flex;
	width: 700rpx;
    height: 50rpx; 
	padding: 50rpx 25rpx;
	
}
.serach-address {
	width: 300rpx;
	height: 60rpx;
	/*background-color: red;*/
}

.search-btn {
  width: 400rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  background-color: #efefef;
  border-radius: 30rpx;
 
}
.search-btn image {
	width: 60rpx;
	height: 60rpx;
  
}
.categoryList .wx-swiper-dot{
    width:10rpx;
    display: inline-flex;
    height: 10rpx;
    margin-left: 20rpx;
    justify-content:space-between;
}
.categoryList {
	width:700rpx;
	margin: 20rpx 25rpx;
	height: 380rpx;	
}
.categoryList swiper-item {
	display: flex;
	flex-flow: row wrap;
}
.category-info {
	width:140rpx;
	height: 160rpx;
	flex-wrap: wrap;
	text-align: center;
}
.category-info image {
	width: 60%;
	height: 50%;
}
.category-text {
	font-size: 24rpx;
	line-height: 24rpx;

}
.hongbao {
	width: 700rpx;
	height: 300rpx;
	margin: 0 25rpx;
}
.content {
	width: 319rpx;
}
.fujin {
	line-height: 120rpx;
	text-align: center;
	font-size: 32rpx;
}
.sort1 {
	color: #717171;
	line-height: 100rpx;
	font-size: 30rpx;
	display: flex;
	text-align: center;
	padding:0 25rpx;
	border-top: 1px solid #e3e3e3;
	border-bottom: 1px solid #e3e3e3;
}
.sort1 text {
	display: inline-block;
	width: 25%;

}
.choose {
	color: #ffcf61;
}
.orange {
	color: #fecb6a;
}
.sort1 .shu {
	color: red;
}
.sort2 {
	display: flex;
	flex-flow: row wrap;
	font-size: 26rpx;
	padding: 25rpx 0 50rpx 0rpx;
}
.sort2 text {
	display: inline-block;
	width: 156.25rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	margin-left: 25rpx;
	color: #6d6d6d ;
	background-color: #f8f8f8;
}
.part {
	padding: 0 25rpx 50rpx 25rpx;
	display: flex;

}
.part image {
	width: 180rpx;
	height: 150rpx;
	margin-right: 10rpx;
}
.part .item-title {
	font-size: 32rpx;
	font-weight: bold;
}
.item-star,.sealed,.item-info {
	font-size: 25rpx;
	color: #4a4a4a;	
}
.item-star {
	margin-right: 20rpx;
}
.score {
	display: flex;
	margin: 20rpx 100rpx 20rpx 0 ;
}
.item-info text {
	margin-right: 10rpx;
}
.distance {
	font-size: 28rpx;
	color: #4a4a4a;

	margin: 70rpx 0 0 0rpx

}
.mask {
	position: fixed;
	top: 0;
	left: 0;
	z-index:100;
}
.mask .top {
	height: 800rpx;
	width: 100%;
	background-color: #fff;
	position: relative;
	left: 0;
	top: 0;
}
.mask-search-btn image {
	width: 60rpx;
	height: 60rpx;
}
.mask .top .mask-search-btn {
	margin:0 30rpx 10rpx 30rpx;
	/*width: 700rpx;*/
	height: 60rpx;
	line-height: 60rpx;
	display: flex;
	background-color: red;
	border-radius: 30rpx;
	background-color: #efefef;
	font-size: 30rpx;
}
.mask-search-btn input{
	height: 60rpx;
}
.first{
	margin-top: 30rpx;
}
.slecet1,.slecet2,.slecet3 {
	margin: 0 0 40rpx 25rpx;
	font-size: 30rpx;
	display: flex;
	flex-flow: row wrap;
}
.slecet1 text,.slecet2 text,.slecet3 text {
	margin: 25rpx 25rpx 0 0;
	display: inline-block;
	width: 216.6rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background-color: #f8f8f8;
	justify-content: space-between;

}
.mid .title {
	font-size: 32rpx;
	margin-left: 30rpx;
}
.btn {
	height: 90rpx;
    line-height: 90rpx;
    display: flex;
    text-align: center;
    font-size: 40rpx;
    width: 100%;
    margin-top: 35rpx;
    border-top: 1px solid #efefef;

   /* position: fixed;
    bottom: 0rpx;
